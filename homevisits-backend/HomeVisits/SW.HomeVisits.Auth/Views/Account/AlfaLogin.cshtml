@model LoginViewModel
@{
    Layout = "~/Views/Shared/_AlfaLayout.cshtml";
}

<div class="row align-items-center justify-content-center h-100">
    <div class="col-xl-4 col-lg-5 col-md-3  d-none d-lg-block side-img ">
        <img src="~/img/thisisengineering-raeng-H_iBHnC8CDo-unsplash.png" id="side-img" class="img-fluid" alt="">
    </div>
    <div class="col-xl-6 col-lg-7 col-md-9 ">
        <form class="login bg-white p-sm-5 p-3" asp-route="Login">
            <img src="~/img/alfa-logo.png" alt="" class="img-fluid d-block mb-5 mx-auto">
            <partial name="_ValidationSummary" class="form-text text-danger" />
            <div class="form-group">
                <input class="form-control" placeholder="  " asp-for="Username" autofocus>
                <label for="username" class="float-label ">username</label>

            </div>
            <div class="form-group pb-3 ">
                <input type="password" class="form-control" placeholder=" " asp-for="Password" autocomplete="off">
                <label fasp-for="Password" class="float-label ">Password</label>

            </div>
            <!-- <div class="alert alert-danger" role="alert">
              A simple danger alert—check it out!
            </div> -->
            <button class="bbtn btn-primary mt-4 btn-block form-control text-uppercase font-weight-bold" name="button" value="login">Login</button>

        </form>
    </div>

</div>


<!-- custom js  -->
<script src="~/js/jquery-3.3.1.min.js"></script>
<script src="~/js/plugins.js"></script>



